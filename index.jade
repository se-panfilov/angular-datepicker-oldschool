                    //        model-well(case-model="commonCase")
                    li
                        section
                            h3 Localized case
                            .case_description
                                ul
                                    li Valid ngModel
                            form#demo_simple_localized_form(name="demo_simple_localized_form")
                                .form-group
                                    label.control-label(for="apd_1") Дата
                                    pure-datepicker#apd_1(ng-model="commonCase.model", apd-localization="localized")
                            model-well(case-model="commonCase")
                    //li
                        section
                            h3 Both-sided limits and valid model
                            .case_description
                                ul
                                    li Valid ngModel
                                    li Start date
                                    li End date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="limitsCase.model", apd-start="limitsCase.startDate", apd-end="limitsCase.endDate")
                            model-well(case-model="limitsCase")
                    //li
                        section
                            h3 Left-side limit and valid model
                            .case_description
                                ul
                                    li Valid ngModel
                                    li Start date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_2") Date
                                    pure-datepicker#apd_2(ng-model="leftLimitsCase.model", apd-start="leftLimitsCase.startDate")
                            model-well(case-model="leftLimitsCase")
                    //li
                        section
                            h3 Right-side limit and valid model
                            .case_description
                                ul
                                    li Valid ngModel
                                    li Start date
                                    li End date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="rightLimitsCase.model", apd-end="rightLimitsCase.endDate")
                            model-well(case-model="rightLimitsCase")
                    //li
