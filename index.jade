                                ul
                                    li Linked Dates
                                    li Different Limits
                                    li Start Date
                                    li End Date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="linkedModelBothDifferentLimitsCase.model", apd-start="linkedModelBothDifferentLimitsCase.startDate_one", apd-end="linkedModelBothDifferentLimitsCase.endDate_one")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="linkedModelBothDifferentLimitsCase.model", apd-start="linkedModelBothDifferentLimitsCase.startDate_two", apd-end="linkedModelBothDifferentLimitsCase.endDate_two")
