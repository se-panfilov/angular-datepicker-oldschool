                    //li
                        section
                            h3 Invalid left-side limit
                            .case_description
                                ul
                                    li Invalid Start date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="invalidLeftLimitCase.model", apd-start="invalidLeftLimitCase.startDate")
                            model-well(case-model="invalidLeftLimitCase")
