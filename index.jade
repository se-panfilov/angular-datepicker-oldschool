                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="linkedModelBothLimitsCase.model", apd-start="linkedModelBothLimitsCase.startDate", apd-end="linkedModelBothLimitsCase.endDate")
                            model-well(case-model="linkedModelBothLimitsCase")
