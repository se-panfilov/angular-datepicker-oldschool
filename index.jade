                                ul
                                    li Valid ngModel
                                    li End date
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="outOfRightLimitCase.model", apd-end="outOfRightLimitCase.endDate")
