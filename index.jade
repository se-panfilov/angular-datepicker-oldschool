                        section
                            h3 No model
                            .case_description
                                ul
                                    li no ngModel
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1
                            section.well
                                | No model
                    //li
                        section
                            h3 Empty model
                            .case_description
                                ul
                                    li Empty ngModel
                            form#demo_simple_form(name="demo_simple_form")
                                .form-group
                                    label.control-label(for="apd_1") Date
                                    pure-datepicker#apd_1(ng-model="emptyModelCase.model")
                            model-well(case-model="emptyModelCase")
                    //li
                        section
                            h3 Empty model and left-side limit
