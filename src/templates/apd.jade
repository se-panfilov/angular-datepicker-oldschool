.apd_root
    select.apd_elem.apd_select_day.apd_select(
    ng-model="lists.d"
    ng-options="day for day in data.list.d"
    ng-init="data.selected.d = data.list.d[0]"
    )
    span.apd_elem.apd_day_of_week(
    ng-bind="daysList[lists.dow]"
    )
    select.apd_elem.apd_select_month.apd_select(
    ng-model="lists.m"
    ng-options="monthList[month] for month in data.list.m"
    ng-init="data.selected.m = data.list.m[0]"
    )
    select.apd_elem.apd_select_year.apd_select(
    ng-model="lists.y"
    ng-options="year for year in data.list.y"
    ng-init="data.selected.y = data.list.y[0]"
    )